<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:id="@+id/tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="SƠ ĐỒ THI SÁT HẠCH LÁI XE A1, A2 NĂM 2017"
        android:textSize="18sp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@id/tv_tittle"
        android:id="@+id/gif_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/a1a2" />

    <TextView
        android:padding="4dp"
        android:layout_below="@id/gif_image_view"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NỘI DUNG 4 BÀI SA HÌNH SÁT HẠCH LÁI XE A1, A2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:paddingStart="4dp"
        android:id="@+id/tv_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:text="Bài số 1: Lái xe theo vòng số 8\nBài số 2: Lái xe trên đường thẳng\nBài số 3: Lái xe trên đường ngoằn ngoèo\nBài số 4: Lái xe trên đường gồ ghề\n"
        android:textSize="16sp" />

    <TextView
        android:padding="4dp"
        android:id="@+id/tv_content3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content2"
        android:layout_marginTop="5dp"
        android:text="Các lỗi bị trừ điểm:\n\nĐiểm tối thiểu để đạt 80/100"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content3"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="- Trừ 5 điểm: cán vạch, chết máy, chân chạm đất\n- Trừ 25 điểm (loại trực tiếp): học viên để té xe hoặc đi sai hình (đi ngược vòng) hoặc sẽ bị loại trực tiếp"
        android:textSize="16sp" />

    <Button
        android:paddingStart="4dp"
        android:id="@+id/btn_a1a2_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content4"
        android:background="@android:color/transparent"
        android:text="Kinh nghiệm thi >>"
        android:textColor="#3046C1"
        android:textStyle="bold" />

</RelativeLayout>
